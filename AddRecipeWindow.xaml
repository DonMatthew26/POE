<Window x:Class="RecipeAppWPF.AddRecipeWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Add Recipe" Height="400" Width="500">
    <Grid Margin="10">
        <StackPanel>
            <TextBlock Text="Recipe Name:" FontWeight="Bold"/>
            <TextBox Name="RecipeNameTextBox" Margin="0,0,0,10"/>
            <TextBlock Text="Ingredients:" FontWeight="Bold"/>
            <ListBox Name="IngredientsListBox" Margin="0,0,0,10"/>
            <Button Content="Add Ingredient" Click="AddIngredientButton_Click" Margin="0,0,0,10"/>
            <TextBlock Text="Steps:" FontWeight="Bold"/>
            <ListBox Name="StepsListBox" Margin="0,0,0,10"/>
            <Button Content="Add Step" Click="AddStepButton_Click" Margin="0,0,0,10"/>
            <Button Content="Save Recipe" Click="SaveRecipeButton_Click" Margin="0,0,0,10"/>
        </StackPanel>
    </Grid>
</Window>