<Window x:Class="RecipeAppWPF.AddStepWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Add Step" Height="200" Width="400">
    <Grid Margin="10">
        <StackPanel>
            <TextBlock Text="Step Description:" FontWeight="Bold"/>
            <TextBox Name="StepDescriptionTextBox" Margin="0,0,0,10"/>
            <Button Content="Add Step" Click="AddStepButton_Click"/>
        </StackPanel>
    </Grid>
</Window>